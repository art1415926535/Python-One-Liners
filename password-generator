''.join(list(map (lambda s: random.choice(''.join([{'0': ''.join([str(x) for x in range(10)]), '1': ''.join([chr(x) for x in range(ord('a'), ord('z'))]), '2': ''.join([chr(x) for x in range(ord('A'), ord('Z'))]), '3': ''.join([chr(x) for x in range(33, 48)])}[x] for x in s])), [input('Из каких символов должен состоять пароль?\n0. Цифры;\n1. Строчные буквы;\n2. Заглавные буквы;\n3. Специальные символы.\n')] * int(input('Сколько символов должен содержать пароль?\n')))))
